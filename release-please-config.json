{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "packages": {
    ".": {
      "bump-minor-pre-major": true,
      "bump-patch-for-minor-pre-major": true,
      "changelog-path": "CHANGELOG.md",
      "changelog-sections": [
        {
          "section": "🚀 Features",
          "type": "feat"
        },
        {
          "section": "🐛 Bug Fixes",
          "type": "fix"
        },
        {
          "section": "🔧 Other Changes",
          "type": "chore"
        },
        {
          "section": "📝 Documentation",
          "type": "docs"
        },
        {
          "section": "🚀 Performance Improvements",
          "type": "perf"
        },
        {
          "hidden": true,
          "section": "🏗️ Build",
          "type": "build"
        },
        {
          "section": "⬆️ Dependency Updates",
          "type": "deps"
        },
        {
          "hidden": true,
          "section": "🤖 CI",
          "type": "ci"
        },
        {
          "section": "♻️ Refactoring",
          "type": "refactor"
        },
        {
          "hidden": true,
          "section": "⏪ Reverts",
          "type": "revert"
        },
        {
          "hidden": true,
          "section": "💄 Styling",
          "type": "style"
        },
        {
          "hidden": true,
          "section": "✅ Tests",
          "type": "test"
        }
      ],
      "draft": false,
      "extra-files": [
        "README.md",
        "versions.tf"
      ],
      "prerelease": false,
      "release-type": "terraform-module",
      "include-v-in-tag": true,
      "pull-request-title-pattern": "chore${scope}: release${component} ${version}",
      "pull-request-header": "# Automated Release Notes",
      "changelog-host": "https://github.com/your-org/your-repo",
      "versioning": "default"
    }
  },
  "release-search-depth": 20,
  "commit-search-depth": 30
}
